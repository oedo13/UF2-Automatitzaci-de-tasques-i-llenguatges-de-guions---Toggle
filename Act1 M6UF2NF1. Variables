##ACTIVITAT 1##


#!/bin/bash
#shell actual
echo $SHELL
#Identificador de pantalla
echo $DISPLAY
#nom complert del directori d'inici de sessió
echo $HOME
#ruta de cerca d'ordres
echo $PATH
#ruta de cerca per a pagines man
echo $MANPATH
#cadenes d'indicació primaries i secundaries
echo $PS1
echo $PS2
#nom inici de sessió
echo $USER
#mostar el tipus de terminal
echo $TERM
#directori actual de treball
echo $PWD
#tots el arguments del shell
echo $0,$1,$2,$#,$*
#darrerea comana funció
echo $?
#PID Shell actual
echo $$


##ACTIVITAT 2##


#Primera part#
echo "Escriu 5 arguments"
read un dos tres quatre cinc
echo $un , $dos , $tres , $quatre , $cinc , $0

#Segona part#
# Bucle que cada parametre el fica a la variable $a i la printa
for a in $@
do
        echo $a
done

#Tercera Part



##ACTIVITAT 3##


#!/bin/bash
read -p "Escriu el teu usuari: " user
#La comanda -sp oculta la contrasenya
read -sp "Escriu la contrasenya: " contra
echo "El teu usuari és: "$user" i la teva contrsenya és: "$contra
